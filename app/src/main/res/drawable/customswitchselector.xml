<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_checked="true">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#DDD"
                android:centerColor="#08ff00"
                android:endColor="#00ff37"
                android:angle="-90" />
            <corners
                android:radius="15dp"/>
            <size
                android:width="47dp"
                android:height="20dp" />
            <stroke
                android:width="4dp"
                android:color="#0000ffff"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="rectangle"
            android:visible="true"
            android:dither="true"
            android:useLevel="false">
            <gradient
                android:startColor="#DDD"
                android:centerColor="#FF0000"
                android:endColor="#FF9000"
                android:angle="-90"/>
            <corners
                android:radius="15dp"/>
            <size
                android:width="47dp"
                android:height="20dp" />
            <stroke
                android:width="4dp"
                android:color="#0000ffff"/>
        </shape>
    </item>
</selector>